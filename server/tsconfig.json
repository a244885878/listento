{
  "compilerOptions": {
    "target": "ES6", // 编译后的 JavaScript 版本
    "module": "CommonJS", // 使用 CommonJS 模块
    "moduleResolution": "node", // 让 TypeScript 按照 Node.js 风格解析模块
    "esModuleInterop": true, // 启用与 ES 模块的互操作性
    "strict": true, // 开启严格模式
    "skipLibCheck": true, // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "outDir": "./dist", // 编译后输出目录
    "baseUrl": "./", // 项目的根目录
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
